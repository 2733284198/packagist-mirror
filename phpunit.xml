<?xml version="1.0"?>
<phpunit bootstrap="vendor/autoload.php" verbose="true" debug="true" colors="true">
    <testsuites>
        <testsuite name='all_tests'>
            <directory suffix='.php'>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>./vendor/</directory>
            <directory>./tests/</directory>
        </blacklist>
    </filter>
</phpunit>
